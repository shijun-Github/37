.search-input-box {
  width: 550rpx;
  height: 80rpx;
  border-radius: 12rpx;
  border-color: #a01313;
  background: #f3f3f3;
  margin-left: 20rpx;
}

.search-word{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
  padding-left: 20rpx;
  /* color: #bbbbbb; */
} 

.search-button{
  height: 80rpx;
  line-height: 80rpx;
  margin:0 20rpx;
  padding: 0 20rpx;
  color: #999999;
  background-color:  #f5f5f5;
  border-radius: 20rpx;
  font-size: 36rpx;
}

/* =========搜索结果======= */
.goods-order{
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  justify-content: space-around;
  position:fixed;
  z-index:999;
  top: 80rpx;
  width: 100%;
  font-size: 32rpx;
  font-weight: 500;
  color:  #bbb;
  background: #fff;
}

.order-item{
  margin: 10rpx 0;
  height: 50rpx;
  line-height: 50rpx;
}

.tab-active {
  /* border-radius: 10rpx; */
  padding: 0rpx 10rpx;
  font-weight: 600;
  font-size: 32rpx;
  color: #333333;
  border-bottom: 2rpx solid #333333;
}


/* 首页下部区域结构 */
.page-body{
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  /* padding: 0 10rpx; */
  margin-top: 140rpx;
}

.goods-list{
 margin: 0;
}

.goods-card{
  display: flex;
  width: 100%;
  height: 280rpx;
  padding-top: 10rpx;
}

.card-left{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 280rpx;
  height: 100%;
  border-radius: 16rpx 0 0 16rpx;
  background:#fff;
}

.card-left .image{
  width: 95%;
  height: 95%;
  border-radius: 16rpx 16rpx 16rpx 16rpx;
}

.card-right{
  display: flex;
  flex-direction: column;
  width: 450rpx;
  height: 100%;
  border-radius: 0 16rpx 16rpx 0rpx;
  background:#fff;
}

.card-righ-upper {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  overflow: hidden;
  /* flex: 1 1 auto; */
}

.goods-title {
  margin: 10rpx 10rpx;
  /* flex-shrink: 0;
  font-size: 25rpx;
  color: #333;
  font-weight: 500;
  text-align:left;
  word-break: break-word; */

  flex-shrink: 0;
  font-size: 28rpx;
  color: #333;
  font-weight: 400;
  display: -webkit-box;
  height: 72rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-word;
  line-height: 36rpx;
}

.goods-mall{
  text-align: left;
  color: #fa4126;
  font-size: 22rpx;
  line-height: 30rpx;
  padding: 0 8rpx;
  /* margin: 8rpx 8rpx 8rpx 8rpx; */
  font-weight: 600;
}

.goods-card-tags {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 8rpx 0 0 0;
}

.goods-tag{
  color: #fa4126;
  font-size: 20rpx;
  line-height: 20rpx;
  border: 1rpx solid #fa4126;
  padding: 5rpx;
  border-radius: 8rpx;
  margin: 8rpx;
}

.card-right-down{
  display: flex;
  justify-content:space-between;
  align-items: baseline;
  font-size: 24rpx;
  /* line-height: 32rpx; */
  margin: 10rpx 10rpx;
}



/* 返回顶部 */
.go-top{
  height: 80rpx;
  width: 80rpx;
  position: fixed;
  bottom: 50px;
  background: rgba(0,0,0,.3);
  right: 30rpx;
  border-radius: 50%;
  opacity: 0.8;
}
