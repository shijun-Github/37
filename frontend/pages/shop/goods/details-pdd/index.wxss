/* pages/goods/details/index.wxss */

.goods-detail-page .goods-head {
  /* --td-swiper-radius: 0; */
  border-radius: 0;
}

.goods-detail-page .swiper-wrap {
  margin-top: 1rpx;
  height: 430px;
  overflow:hidden;
  border-radius: 16rpx 16rpx 16rpx 16rpx;  /* (分别表示左上，右上，右下，左下的边角值) */
}

.swiper__image{
  width: 100%;
  height: 100%;
} 

.goods-detail-page .goods-info {
  margin: 0 auto;
  padding: 26rpx 0 28rpx 30rpx;
  background-color: #fff;
}

